<h1>Hello, Rails!</h1>

<%= link_to 'Welcome', controller: 'welcome' %>

<%= link_to 'New article', new_article_path %>

<h2>Listing articles</h2>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
    </tr>
  <% end %>
</table>